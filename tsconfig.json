{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "lib"
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}
